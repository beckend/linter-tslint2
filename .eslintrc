{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": [],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "waitsForPromise": true,
    "expect": true,
    "mochaAsync": true,
    "chai": true,
    "sinon": true,
    "__DEV__": true,
    "__PROD__": true,
    "__TEST__": true,
    "atom": true
  },
  "rules": {
    "import/no-unresolved": [
      1,
      {
        "commonjs": true,
        "amd": true
      }
    ],

    "import/prefer-default-export": 0,

    "quotes": [2, "single", "avoid-escape"],
    "comma-dangle": [2, "never"],
    "indent": [2, 2],
    "object-curly-spacing": [2, "always"],
    "array-bracket-spacing": [2, "always"],
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "func-names": 0,
    "no-else-return": 0,
    "no-console": 1,
    "no-throw-literal": 0,
    "id-length": 0,
    "no-unused-expressions": 0,
    "no-param-reassign": 0,
    "max-len": [1, 100],
    "arrow-body-style": [0, "as-needed"],
    "key-spacing": [0, {
      "singleLine": {
          "beforeColon": false,
          "afterColon": true
      },
      "multiLine": {
        "beforeColon": false,
        "afterColon": true,
        "align": "value"
      }
    }],
    "no-multi-spaces": [0, {
      "exceptions": {
        "Property": true,
        "VariableDeclarator": true,
        "ImportDeclaration": true
      }
    }],
    "global-require": 0
  }
}
